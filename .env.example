# Memento Configuration
# Copy this file to .env and customize as needed
# All configuration can be overridden via environment variables

# ================================
# Server Configuration
# ================================
# HTTP server port (default: 6363)
MEMENTO_PORT=6363

# HTTP server host binding (default: 0.0.0.0)
# Use 0.0.0.0 to bind to all interfaces
# Use 127.0.0.1 for localhost only
MEMENTO_HOST=0.0.0.0

# ================================
# Storage Configuration
# ================================
# Storage engine: sqlite, postgres (default: sqlite)
MEMENTO_STORAGE_ENGINE=sqlite

# Path to data directory (default: ./data)
MEMENTO_DATA_PATH=./data

# ================================
# LLM Configuration
# ================================
# LLM provider: ollama, openai, anthropic (default: ollama)
MEMENTO_LLM_PROVIDER=ollama

# Ollama Configuration
MEMENTO_OLLAMA_URL=http://localhost:11434
MEMENTO_OLLAMA_MODEL=qwen2.5:7b

# OpenAI Configuration
MEMENTO_OPENAI_API_KEY=
MEMENTO_OPENAI_MODEL=gpt-4

# Anthropic Configuration
MEMENTO_ANTHROPIC_API_KEY=
MEMENTO_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ================================
# Security Configuration
# ================================
# Security mode: development, production (default: development)
# In development mode, authentication is relaxed
MEMENTO_SECURITY_MODE=development

# API authentication token (empty in development mode)
# Set this in production for API access control
MEMENTO_API_TOKEN=

# ================================
# Backup Configuration
# ================================
# Enable automatic backups (default: false)
MEMENTO_BACKUP_ENABLED=false

# Backup interval (default: 24h)
# Examples: 1h, 6h, 24h, 168h (7 days)
MEMENTO_BACKUP_INTERVAL=24h

# Path to backup directory (default: ./backups)
MEMENTO_BACKUP_PATH=./backups

# Backup retention policy (number of backups to keep)
MEMENTO_BACKUP_RETENTION_HOURLY=24
MEMENTO_BACKUP_RETENTION_DAILY=7
MEMENTO_BACKUP_RETENTION_WEEKLY=4
MEMENTO_BACKUP_RETENTION_MONTHLY=12

# Verify backup integrity after creation (default: true)
MEMENTO_BACKUP_VERIFY=true

# ================================
# Feature Flags
# ================================
# Enable web UI (default: true)
MEMENTO_ENABLE_WEB_UI=true

# Enable MCP server (default: true)
MEMENTO_ENABLE_MCP=true

# Enable REST API (default: true)
MEMENTO_ENABLE_REST=true

# ================================
# User Configuration
# ================================
# Display name for the user.
# This is also persisted to the settings table in the database so it
# survives restarts. A value stored in the database takes precedence
# over this environment variable.
MEMENTO_USER_NAME=

# ================================
# Docker Configuration
# ================================
# Docker-specific settings for containerized deployment
# When running with docker-compose, these values are set automatically

# Docker: Server port (container exposes 6363)
# MEMENTO_PORT=6363

# Docker: Host binding (bind to all interfaces in container)
# MEMENTO_HOST=0.0.0.0

# Docker: Data path (directory â€” the DB file is created inside)
# MEMENTO_DATA_PATH=/data

# Docker: Ollama URL (container-to-container communication)
# MEMENTO_OLLAMA_URL=http://ollama:11434

# Docker: Ollama model
# MEMENTO_OLLAMA_MODEL=qwen2.5:7b

# Docker: Backup path (mounted volume in container)
# MEMENTO_BACKUP_PATH=/backups

# Docker: Enable backups (handled by backup service)
# MEMENTO_BACKUP_ENABLED=true
